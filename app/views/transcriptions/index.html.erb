<h1>Listing transcriptions</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Transcription</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transcriptions.each do |transcription| %>
  <tr>
    <td><%= transcription.video_segment_id %></td>
    <td><%= transcription.category.name %></td>
    <td><%= transcription.transcription %></td>
    <td><%= link_to 'Show', transcription %></td>
    <td><%= link_to 'Edit', edit_transcription_path(transcription) %></td>
    <td><%= link_to 'Destroy', transcription, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

